@page "/"
@inject PersonService PersonService

<div class="page-wrapper">
    <div class="hero-card">
        <div>
            <p class="eyebrow">XPTO Corp · Gestão de Pessoas</p>
            <h1>Pipeline de talentos</h1>
            <p>Cadastre, pesquise e atualize colaboradores com um front moderno e responsivo sustentado por .NET MAUI + Blazor + Bootstrap.</p>
        </div>
        <div class="hero-kpi">
            <span class="label">Total de pessoas</span>
            <strong>@people.Count</strong>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12 col-lg-4">
            <div class="glass-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="card-title">@((currentPerson.Id == 0 ? "Nova" : "Editar") + " pessoa")</h2>
                    @if (currentPerson.Id != 0)
                    {
                        <span class="badge text-bg-warning">Editando registro #@currentPerson.Id</span>
                    }
                </div>
                <EditForm Model="currentPerson" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="form-floating mb-3">
                        <InputText id="fullName" class="form-control" @bind-Value="currentPerson.FullName" placeholder="Nome completo" />
                        <label for="fullName">Nome completo</label>
                    </div>
                    <div class="form-floating mb-3">
                        <InputText id="email" class="form-control" @bind-Value="currentPerson.Email" placeholder="nome@email.com" />
                        <label for="email">E-mail corporativo</label>
                    </div>
                    <div class="form-floating mb-3">
                        <InputText id="phone" class="form-control" @bind-Value="currentPerson.Phone" placeholder="(11) 90000-0000" />
                        <label for="phone">Telefone</label>
                    </div>
                    <div class="form-floating mb-3">
                        <InputText id="document" class="form-control" @bind-Value="currentPerson.Document" placeholder="Documento" />
                        <label for="document">Documento</label>
                    </div>
                    <div class="form-floating mb-3">
                        <InputDate id="birthDate" class="form-control" @bind-Value="currentPerson.BirthDate" />
                        <label for="birthDate">Data de nascimento</label>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary btn-lg" type="submit">
                            @(currentPerson.Id == 0 ? "Cadastrar pessoa" : "Atualizar cadastro")
                        </button>
                        <button class="btn btn-outline-light" type="button" @onclick="ResetForm">Limpar formulário</button>
                    </div>
                </EditForm>
            </div>
        </div>
        <div class="col-12 col-lg-8">
            <div class="glass-card">
                <div class="d-flex flex-column flex-md-row gap-3 align-items-md-center justify-content-between mb-3">
                    <h2 class="card-title mb-0">Pessoas cadastradas</h2>
                    <input type="search"
                           class="form-control form-control-lg search-box"
                           placeholder="Pesquise por nome, e-mail ou documento"
                           @bind="searchTerm"
                           @bind:event="oninput"
                           @oninput="@(async context => await ApplyFilterAsync())" />
                </div>
                @if (!string.IsNullOrWhiteSpace(alertMessage))
                {
                    <div class="alert @alertCss mb-3" role="alert">
                        @alertMessage
                    </div>
                }
                @if (isLoading)
                {
                    <div class="placeholder-glow py-5 text-center text-light">
                        <div class="spinner-border text-primary" role="status"></div>
                        <p class="mt-3">Buscando pessoas...</p>
                    </div>
                }
                else if (!people.Any())
                {
                    <div class="empty-state text-center py-5">
                        <h3>Nenhum registro encontrado</h3>
                        <p>Use o formulário ao lado para cadastrar sua primeira pessoa.</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table align-middle table-dark table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>E-mail</th>
                                    <th>Telefone</th>
                                    <th>Documento</th>
                                    <th>Nascimento</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var person in people)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">@person.FullName</div>
                                            <small class="text-muted">Criado em @person.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                                        </td>
                                        <td>@person.Email</td>
                                        <td>@(!string.IsNullOrWhiteSpace(person.Phone) ? person.Phone : "-")</td>
                                        <td>@(!string.IsNullOrWhiteSpace(person.Document) ? person.Document : "-")</td>
                                        <td>@person.BirthDate.ToString("dd/MM/yyyy")</td>
                                        <td class="text-end">
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-primary" @onclick="() => EditPerson(person)">Editar</button>
                                                <button class="btn btn-outline-danger" @onclick="() => DeletePersonAsync(person.Id)">Excluir</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<Person> people = new();
    private Person currentPerson = new()
    {
        BirthDate = DateTime.Today.AddYears(-18)
    };
    private bool isLoading = true;
    private string? searchTerm;
    private string? alertMessage;
    private string alertCss = "alert-info";

    protected override async Task OnInitializedAsync()
    {
        await LoadPeopleAsync();
    }

    private async Task HandleSubmit()
    {
        var isNew = currentPerson.Id == 0;
        try
        {
            await PersonService.SaveAsync(currentPerson);
            await LoadPeopleAsync();
            alertMessage = isNew ? "Pessoa cadastrada com sucesso." : "Cadastro atualizado com sucesso.";
            alertCss = "alert-success";
            ResetForm();
        }
        catch (Exception ex)
        {
            alertMessage = $"Não foi possível salvar o registro: {ex.Message}";
            alertCss = "alert-danger";
        }
    }

    private async Task LoadPeopleAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            people = (await PersonService.GetAsync(searchTerm)).ToList();
        }
        catch (Exception ex)
        {
            alertMessage = $"Falha ao carregar dados: {ex.Message}";
            alertCss = "alert-danger";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void EditPerson(Person person)
    {
        currentPerson = new Person
        {
            Id = person.Id,
            FullName = person.FullName,
            Email = person.Email,
            Phone = person.Phone,
            Document = person.Document,
            BirthDate = person.BirthDate,
            CreatedAt = person.CreatedAt
        };
    }

    private async Task DeletePersonAsync(int id)
    {
        try
        {
            await PersonService.DeleteAsync(id);
            alertMessage = "Registro removido com sucesso.";
            alertCss = "alert-warning";
            await LoadPeopleAsync();
            ResetForm();
        }
        catch (Exception ex)
        {
            alertMessage = $"Não foi possível excluir: {ex.Message}";
            alertCss = "alert-danger";
        }
    }

    private async Task ApplyFilterAsync()
    {
        await LoadPeopleAsync();
    }

    private void ResetForm()
    {
        currentPerson = new Person
        {
            BirthDate = DateTime.Today.AddYears(-18)
        };
        StateHasChanged();
    }
}

